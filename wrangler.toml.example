name = "soul-guardian-backend"
main = "dist/api/index.js"
compatibility_date = "2024-11-19"

# Local development configuration
[env.development]
vars = { }

# D1 Database (local SQLite for development)
[[d1_databases]]
binding = "SMART_DB"
database_name = "smart_db"
database_id = "local-smart-db"

# R2 Bucket (for avatar images)
[[r2_buckets]]
binding = "AVATAR_BUCKET"
bucket_name = "avatar-bucket"

# Environment variables - DO NOT commit real values!
# Copy this file to wrangler.toml and add your real values
[vars]
WORKOS_CLIENT_ID = "your_workos_client_id"
WORKOS_CLIENT_SECRET = "your_workos_secret"
WORKOS_COOKIE_PASSWORD = "your_secure_password"
