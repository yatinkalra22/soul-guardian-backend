{
  "name": "soul_guardian_backend",
  "version": "1.0.0",
  "private": true,
  "description": "LiquidMetal AI app",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "dev": "tsx src/dev-server.ts",
    "dev:watch": "tsx watch src/dev-server.ts",
    "dev:remote": "npm run build && raindrop build deploy --start",
    "start": "raindrop build deploy --start",
    "stop": "raindrop build stop",
    "restart": "raindrop build deploy --start",
    "deploy": "raindrop build deploy",
    "status": "raindrop build status",
    "logs": "raindrop logs tail",
    "url": "raindrop build find",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "eslint . --max-warnings=0",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@liquidmetal-ai/raindrop-framework": "^0.10.0",
    "@modelcontextprotocol/sdk": "^1",
    "hono": "^4",
    "kysely": "^0.27.2",
    "kysely-d1": "^0.3.0",
    "zod": "^3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251119.0",
    "@hono/node-server": "^1.19.6",
    "miniflare": "^4.20251113.0",
    "shx": "^0.4.0",
    "ts-node": "^10",
    "tsx": "^4.20.6",
    "typescript": "^5.0.4",
    "typescript-eslint": "^8.7.0",
    "vitest": "^3.1.3",
    "wrangler": "^4.49.0"
  }
}
