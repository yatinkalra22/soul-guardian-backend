{
  "name": "soul_guardian_backend",
  "version": "1.0.0",
  "private": true,
  "description": "LiquidMetal AI app",
  "scripts": {
    "start": "tsx src/server.ts",
    "dev": "tsx watch src/server.ts",
    "build": "raindrop build validate",
    "predeploy": "./scripts/set-env.sh",
    "deploy": "raindrop build deploy --amend",
    "deploy:start": "./scripts/set-env.sh && raindrop build deploy --start",
    "deploy:stop": "raindrop build stop",
    "deploy:status": "raindrop build status",
    "deploy:logs": "raindrop logs tail",
    "deploy:url": "raindrop build find",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "eslint . --max-warnings=0",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@liquidmetal-ai/raindrop-framework": "^0.11.0",
    "@modelcontextprotocol/sdk": "^1",
    "@workos-inc/node": "^7.73.0",
    "dotenv": "^17.2.3",
    "hono": "^4",
    "jose": "^6.1.2",
    "kysely": "^0.27.2",
    "kysely-d1": "^0.3.0",
    "zod": "^3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251119.0",
    "@hono/node-server": "^1.19.6",
    "miniflare": "^4.20251113.0",
    "shx": "^0.4.0",
    "ts-node": "^10",
    "tsx": "^4.20.6",
    "typescript": "^5.0.4",
    "typescript-eslint": "^8.7.0",
    "vitest": "^3.1.3",
    "wrangler": "^4.49.0"
  }
}
